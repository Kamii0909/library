<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox fx:id="hBoxContent" maxWidth="2000.0" prefHeight="500.0" prefWidth="1000.0"
   xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
   fx:controller="hust.kien.project.controller.SachController">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="0.0" prefWidth="2000.0">
         <children>
            <Label text="Danh sách tất cả sách">
               <font>
                  <Font name="System Bold" size="22.0" />
               </font>
            </Label>
            <TextField fx:id="txt_search" onKeyReleased="#timKiemSach" prefHeight="32.0"
               prefWidth="2000.0" promptText="tìm kiếm sách" />
            <TableView fx:id="table" maxWidth="2000.0" prefHeight="2000.0" prefWidth="1000.0">
               <columns>
                  <TableColumn fx:id="col_tacgia" prefWidth="75.0" text="tác giả" />
                  <TableColumn fx:id="col_masach" prefWidth="75.0" text="mã sách" />
                  <TableColumn fx:id="col_tensach" prefWidth="75.0" text="tên sách" />
                  <TableColumn fx:id="col_namxuatban" prefWidth="75.0" text="năm xuất bản" />
                  <TableColumn fx:id="col_theloai" prefWidth="75.0" text="thể loại" />
               </columns>
            </TableView>
            <VBox minHeight="200.0" prefHeight="200.0" prefWidth="2000.0">
               <children>
                  <Label text="Thêm/ chỉnh sửa thông tin sách">
                     <font>
                        <Font size="15.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                     </VBox.margin>
                  </Label>
                  <HBox prefHeight="184.0" prefWidth="2000.0">
                     <children>
                        <VBox alignment="TOP_CENTER" prefHeight="169.0" prefWidth="150.0">
                           <children>
                              <Label text="Mã sách">
                                 <font>
                                    <Font size="15.0" />
                                 </font>
                              </Label>
                              <Label text="Tên sách">
                                 <font>
                                    <Font size="15.0" />
                                 </font>
                                 <VBox.margin>
                                    <Insets top="27.0" />
                                 </VBox.margin>
                              </Label>
                              <Label text="Tác giả">
                                 <font>
                                    <Font size="15.0" />
                                 </font>
                                 <VBox.margin>
                                    <Insets top="23.0" />
                                 </VBox.margin>
                              </Label>
                           </children>
                        </VBox>
                        <VBox prefHeight="205.0" prefWidth="227.0">
                           <children>
                              <TextField />
                              <TextField>
                                 <VBox.margin>
                                    <Insets top="20.0" />
                                 </VBox.margin>
                              </TextField>
                              <ChoiceBox prefHeight="25.0" prefWidth="323.0">
                                 <VBox.margin>
                                    <Insets top="20.0" />
                                 </VBox.margin>
                              </ChoiceBox>
                           </children>
                        </VBox>
                        <VBox alignment="TOP_CENTER" prefHeight="205.0" prefWidth="150.0">
                           <children>
                              <Label text="Số lượng">
                                 <font>
                                    <Font size="15.0" />
                                 </font>
                                 <VBox.margin>
                                    <Insets />
                                 </VBox.margin>
                              </Label>
                              <Label text="Năm xuất bản">
                                 <font>
                                    <Font size="15.0" />
                                 </font>
                                 <VBox.margin>
                                    <Insets top="27.0" />
                                 </VBox.margin>
                              </Label>
                              <Label text="Thể loại">
                                 <font>
                                    <Font size="15.0" />
                                 </font>
                                 <VBox.margin>
                                    <Insets top="23.0" />
                                 </VBox.margin>
                              </Label>
                           </children>
                        </VBox>
                        <VBox prefHeight="205.0" prefWidth="227.0">
                           <children>
                              <TextField>
                                 <VBox.margin>
                                    <Insets />
                                 </VBox.margin>
                              </TextField>
                              <TextField>
                                 <VBox.margin>
                                    <Insets top="20.0" />
                                 </VBox.margin>
                              </TextField>
                              <ChoiceBox prefHeight="25.0" prefWidth="238.0">
                                 <VBox.margin>
                                    <Insets top="20.0" />
                                 </VBox.margin>
                              </ChoiceBox>
                           </children>
                        </VBox>
                        <VBox alignment="TOP_CENTER" prefHeight="205.0" prefWidth="253.0">
                           <children>
                              <Button mnemonicParsing="false" prefHeight="35.0" prefWidth="283.0"
                                 style="-fx-background-color: #3f4a59;" text="Thêm sách"
                                 textFill="WHITE">
                                 <opaqueInsets>
                                    <Insets />
                                 </opaqueInsets>
                                 <font>
                                    <Font name="System Bold" size="16.0" />
                                 </font>
                              </Button>
                              <Button mnemonicParsing="false" prefHeight="35.0" prefWidth="306.0"
                                 style="-fx-background-color: #3f4a59;" text="Sửa sách"
                                 textFill="WHITE">
                                 <opaqueInsets>
                                    <Insets />
                                 </opaqueInsets>
                                 <VBox.margin>
                                    <Insets top="20.0" />
                                 </VBox.margin>
                                 <font>
                                    <Font name="System Bold" size="16.0" />
                                 </font>
                              </Button>
                              <Button mnemonicParsing="false" prefHeight="35.0" prefWidth="313.0"
                                 style="-fx-background-color: #3f4a59;" text="Xóa sách"
                                 textFill="WHITE">
                                 <opaqueInsets>
                                    <Insets />
                                 </opaqueInsets>
                                 <VBox.margin>
                                    <Insets top="20.0" />
                                 </VBox.margin>
                                 <font>
                                    <Font name="System Bold" size="16.0" />
                                 </font>
                              </Button>
                           </children>
                           <HBox.margin>
                              <Insets left="20.0" />
                           </HBox.margin>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets top="15.0" />
   </padding>
</HBox>